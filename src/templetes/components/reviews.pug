script(type="text/x-template")#slider-container
    .reviews
        .reviews__header
            .reviews__title.section-title Что обо мне говорят
            .reviews__buttons
                button(type="button" @click="slide('prev')" :disabled="!buttons.prev").reviews__btn.reviews__btn_prev
                button(type="button" @click="slide('next')" :disabled="!buttons.next").reviews__btn.reviews__btn_next
        .reviews-wrap
            swiper(ref="slider" :options="sliderOptions")
                swiper-slide(v-for="review in reviews" :key="review.id")
                    .quote
                        .quote__text
                            p {{review.text}}
                        .quote__user
                            .user-min
                                .user-min__avatar
                                    .user-min__pic-wrapper
                                        img(:src="review.pic").user-min__avatar-pic
                                .user-min__info
                                    .user-min__name {{review.name}}
                                    .user-min__occ {{review.occ}}