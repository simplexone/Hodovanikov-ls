.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: $text-color;

    &__title {
        font-weight: 600;
        font-size: 18px;
        max-width: 165px;
        text-align: center;
        color: rgba(70, 78, 98, 0.5);
    }

    &__name {
        font-weight: 800;
        font-size: 72px;
        max-width: 427px;
        line-height: 60px;
    }
}