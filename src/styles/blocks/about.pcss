.about__container {
  display: flex;
  padding: 50px 0 268px;
  justify-content: space-between;
}

.about__user {
  width: 36%;
}

.about__user-text {
  color: rgba($text-color);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 56%;
}



.about__desc {
  font-weight: 600;
  margin-bottom: 20px;
}

.about__title {
  font-weight: 700;
  font-size: 36px;
  margin-bottom: 30px;
  color: $text-color;
}

.about__ps {
  font-style: italic;
  margin-bottom: 36px;
  color: rgba($text-color, 0.5)
}