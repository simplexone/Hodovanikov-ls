.iconed-link {
    position: relative;
    display: block;
    color: $links-color;
    font-weight: bold;
    font-size: 18px;
    text-decoration: initial;
    margin-left: 30px;

    &:before {
        content: "";
        background: svg-load('link.svg', fill=$links-color, width=100%, height=100%) center center no-repeat;
        width: 20px;
        height: 18px;
        position: absolute;
        top: 3px;
        left: -30px;
    }
}